<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:background="@color/zrwhite2" android:orientation="vertical" android:layout_height="fill_parent">
    <TextView android:id="@+id/mResult"
              style="@style/StyleBarTitle"
              android:text="扫描结果"
            />
    <LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout1"
                  android:layout_height="wrap_content" android:orientation="vertical">
        <TextView android:textSize="25dp" android:layout_height="wrap_content" android:id="@+id/textView2"
                  android:textColor="#000000" android:text="二维码详情：" android:layout_width="wrap_content"/>
        <TextView android:textSize="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:autoLink="all"
                  android:id="@+id/qrcode"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout2"
                  android:layout_height="wrap_content">
        <Button android:layout_width="wrap_content" android:text="短信分享" android:id="@+id/sharemessgebutton"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/backmainbutton" android:text=" 返  回 "/>
    </LinearLayout>
</LinearLayout>
