<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/layout_pay"
    android:orientation="vertical"
    android:background="@drawable/game_background"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
  <TextView android:id="@+id/text_1"
      style="@style/StyleBarTitle"
      android:text="兑奖"
      />
  <LinearLayout android:id="@+id/layout_tips"
      android:gravity="center"
      android:orientation="horizontal"
      android:layout_width="fill_parent" android:layout_height="wrap_content"
      xmlns:android="http://schemas.android.com/apk/res/android">
    >
    <TextView
        android:id="@+id/text_qianzui"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/zr_black"
        android:textStyle="bold"
        android:text="恭喜你获得"
        />
    <TextView
        android:id="@+id/text_result"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="21"
        android:textSize="25sp"
        android:textColor="@color/zr_red"
        android:textStyle="bold"
        />
  </LinearLayout>
  <LinearLayout android:id="@+id/layout_edit"
      android:gravity="center"
      android:orientation="horizontal"
      android:layout_width="fill_parent" android:layout_height="wrap_content"
      xmlns:android="http://schemas.android.com/apk/res/android">
    >
    <EditText
        android:id="@+id/editText_phone"
        android:layout_margin="25dp"
        android:padding="4dp"
        android:lines="1"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="请输入手机号"
        />
  </LinearLayout>
  <LinearLayout android:id="@+id/layout_btn"
      android:layout_marginTop="30dp"
      android:gravity="center"
      android:orientation="vertical"
      android:layout_width="fill_parent" android:layout_height="wrap_content"
      xmlns:android="http://schemas.android.com/apk/res/android">
    >
    <Button
        android:id="@+id/btn_sent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/btn_selector"
        android:text="确定发送"
        android:textColor="@color/zr_black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"

        />

  </LinearLayout>
</LinearLayout>